<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <actionCalls>
        <description>Displays a toast message indicating the successful deletion.</description>
        <name>Success_Toast</name>
        <label>Success Toast</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <actionName>c:toastLocalAction</actionName>
        <actionType>lwcComponent</actionType>
        <connector>
            <targetReference>The_End</targetReference>
        </connector>
        <flowTransactionModel>CurrentTransaction</flowTransactionModel>
        <inputParameters>
            <name>title</name>
            <value>
                <stringValue>SUCCESS</stringValue>
            </value>
        </inputParameters>
        <inputParameters>
            <name>message</name>
            <value>
                <elementReference>ContactInformation</elementReference>
            </value>
        </inputParameters>
        <inputParameters>
            <name>variant</name>
            <value>
                <stringValue>success</stringValue>
            </value>
        </inputParameters>
        <nameSegment>c:toastLocalAction</nameSegment>
        <offset>0</offset>
    </actionCalls>
    <actionCalls>
        <description>Displays a modal informing the user that this flow will delete the chosen contact.</description>
        <name>Warning_Modal</name>
        <label>Warning Modal</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <actionName>c:modalLocalAction</actionName>
        <actionType>lwcComponent</actionType>
        <connector>
            <targetReference>Get_Contacts</targetReference>
        </connector>
        <flowTransactionModel>CurrentTransaction</flowTransactionModel>
        <inputParameters>
            <name>title</name>
            <value>
                <stringValue>PLEASE READ</stringValue>
            </value>
        </inputParameters>
        <inputParameters>
            <name>content</name>
            <value>
                <stringValue>Completing this flow deletes a record - use with caution</stringValue>
            </value>
        </inputParameters>
        <inputParameters>
            <name>size</name>
            <value>
                <stringValue>medium</stringValue>
            </value>
        </inputParameters>
        <nameSegment>c:modalLocalAction</nameSegment>
        <offset>0</offset>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </actionCalls>
    <apiVersion>65.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <customProperties>
        <name>ScreenProgressIndicator</name>
        <value>
            <stringValue>{&quot;location&quot;:&quot;top&quot;,&quot;type&quot;:&quot;simple&quot;}</stringValue>
        </value>
    </customProperties>
    <description>Demo flow for LWC local actions - includes a modal and a toast.</description>
    <dynamicChoiceSets>
        <description>Collection choice containing all contafts</description>
        <name>ContactsChoice</name>
        <collectionReference>Get_Contacts</collectionReference>
        <dataType>String</dataType>
        <displayField>Name</displayField>
        <object>Contact</object>
        <valueField>Id</valueField>
    </dynamicChoiceSets>
    <environments>Default</environments>
    <formulas>
        <description>Contact information for use in the confirmation modal.</description>
        <name>ContactInformation</name>
        <dataType>String</dataType>
        <expression>&apos;The contact &apos; +  {!Get_Contact_Record.Name} + &apos;, who is the &apos; + {!Get_Contact_Record.Title} + &apos; at &apos; + {!Get_Contact_Record.Account.Name} + &apos; was deleted.&apos;</expression>
    </formulas>
    <interviewLabel>LWC Local Actions Demo {!$Flow.CurrentDateTime}</interviewLabel>
    <label>LWC Local Actions Demo</label>
    <processMetadataValues>
